<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input type="text" name="name" placeholder="Digite o seu nome completo" value="{{ user.name }}" required>
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input type="email" name="email" placeholder="Digite o seu E-mail" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input type="password" name="password" required placeholder="Escolha uma senha segura" >
    </div>
</div>
{% if not user.id %}

    <div class="item">
        <div>Repetir Senha</div>
        <div class="input">
            <input type="password" required name="passwordRepeat" placeholder="Digite novamente a senha escolhida">
        </div>
    </div>

{% endif %}
<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input type="text" name="cpf_cnpj" placeholder="Digite o seu documento" value="{{ user.cpf_cnpj }} " onblur="Validate.apply(this, 'isCpfCnpj')" onkeydown="Mask.apply(this, 'cpfCnpj')">
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input type="text" name="cep" placeholder="999999-999" value="{{ user.cep }} " onblur="Validate.apply(this, 'isCep')" onkeydown="Mask.apply(this, 'cep')">
    </div>
</div>

<div class="item">
    <div>Endereço Completo</div>
    <div class="input">
        <input type="text" name="address" placeholder="Digite seu endereço completo" value="{{ user.address }}">
    </div>
</div>